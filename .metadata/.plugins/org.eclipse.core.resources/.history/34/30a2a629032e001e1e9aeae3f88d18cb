class Pattern3
{
	public static void main(String args[])
	{
		int x,y,z,a;
		for(x=1;x<5;x++)
		{
			for(z=3;z>=x;z--)
			{
				System.out.print("   ");
			}
			for(y=1;y<=x;y++)
			{
				System.out.print(" # ");
			}
			for(a=x;a>1;a--)
			{
				System.out.print(" # ");
			}
		System.out.println();
		}
	}
}
			