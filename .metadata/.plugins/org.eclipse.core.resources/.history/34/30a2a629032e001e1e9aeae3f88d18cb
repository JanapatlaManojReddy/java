class Pattern1
{
	public static void main(String args[])
	{
		int x,y,z;
		for(x=1;x<6;x++)
		{
			for(z=5;z>=x;z--)
			{
				System.out.print(" ");
			}
			for(y=1;y<=x;y++)
			{
				System.out.print(y+" ");
			}
			System.out.println();
		}
		for(x=4;x>=1;x--)
		{
			for(z=x;z<=5;z++)
			{
				System.out.print(" ");
			}
			for(y=1;y<=x;y++)
			{
				System.out.print("*"+" ");
			}
			System.out.println();
		}
			
		
	}
}


